        // 記憶力挑戰遊戲
        document.getElementById('memory-game').addEventListener('click', function() {
            const colors = ['紅色', '藍色', '綠色', '黃色', '紫色'];
            const randomColors = [];
            
            for (let i = 0; i < 4; i++) {
                randomColors.push(colors[Math.floor(Math.random() * colors.length)]);
            }
            
            const sequence = randomColors.join('、');
            
            openModal('記憶力挑戰', `
                <div style="text-align: center;">
                    <h3 style="color: #0056a6; margin-bottom: 20px;">記憶力挑戰遊戲</h3>
                    <p>請記住下面的顏色序列：</p>
                    <div style="font-size: 2rem; font-weight: bold; color: #9b1b30; margin: 20px 0; padding: 20px; background: #f9f9f9; border-radius: 10px;">
                        ${sequence}
                    </div>
                    <p>您有10秒鐘時間記憶，然後我們會測試您的記憶力！</p>
                    <div id="countdown" style="font-size: 3rem; font-weight: bold; color: #e91e63; margin: 20px 0;">10</div>
                    <button id="start-test" style="background: #4CAF50; color: white; border: none; padding: 15px 30px; font-size: 1.2rem; border-radius: 50px; cursor: pointer; margin-top: 20px;">
                        開始測試
                    </button>
                </div>
            `);
            
            let countdown = 10;
            const countdownElement = document.getElementById('countdown');
            const countdownInterval = setInterval(() => {
                countdown--;
                countdownElement.textContent = countdown;
                
                if (countdown <= 0) {
                    clearInterval(countdownInterval);
                    document.getElementById('start-test').style.display = 'block';
                }
            }, 1000);
            
            document.addEventListener('click', function startTestHandler(e) {
                if (e.target && e.target.id === 'start-test') {
                    clearInterval(countdownInterval);
                    
                    modalContent.innerHTML = `
                        <div style="text-align: center;">
                            <h3 style="color: #0056a6; margin-bottom: 20px;">記憶力測試</h3>
                            <p>請按順序點擊您記得的顏色：</p>
                            <div style="display: flex; justify-content: center; gap: 15px; margin: 30px 0; flex-wrap: wrap;">
                                ${colors.map(color => `
                                    <button class="color-btn" data-color="${color}" style="background: ${getColorHex(color)}; color: white; border: none; padding: 15px 25px; font-size: 1.2rem; border-radius: 10px; cursor: pointer; min-width: 100px;">
                                        ${color}
                                    </button>
                                `).join('')}
                            </div>
                            <div id="user-sequence" style="margin: 20px 0; font-size: 1.5rem; min-height: 40px;"></div>
                            <button id="submit-answer" style="background: #9b1b30; color: white; border: none; padding: 15px 30px; font-size: 1.2rem; border-radius: 50px; cursor: pointer; margin-top: 20px;">
                                提交答案
                            </button>
                            <div id="game-result" style="margin-top: 20px; font-size: 1.5rem; font-weight: bold;"></div>
                        </div>
                    `;
                    
                    const userSequence = [];
                    
                    document.querySelectorAll('.color-btn').forEach(btn => {
                        btn.addEventListener('click', function() {
                            const color = this.getAttribute('data-color');
                            userSequence.push(color);
                            document.getElementById('user-sequence').textContent = userSequence.join('、');
                        });
                    });
                    
                    document.getElementById('submit-answer').addEventListener('click', function() {
                        let correctCount = 0;
                        for (let i = 0; i < Math.min(userSequence.length, randomColors.length); i++) {
                            if (userSequence[i] === randomColors[i]) {
                                correctCount++;
                            }
                        }
                        
                        const resultElement = document.getElementById('game-result');
                        if (correctCount === randomColors.length && userSequence.length === randomColors.length) {
                            resultElement.innerHTML = `<span style="color: #4CAF50;">太棒了！您答對了所有 ${correctCount} 個顏色！</span>`;
                        } else {
                            resultElement.innerHTML = `<span style="color: #9b1b30;">您答對了 ${correctCount} 個顏色。正確順序是：${randomColors.join('、')}</span>`;
                        }
                        
                        setTimeout(() => {
                            modal.style.display = 'none';
                            document.body.style.overflow = 'auto';
                            document.getElementById('game-result').innerHTML = `遊戲結束！您答對了 ${correctCount} 個顏色。`;
                        }, 3000);
                    });
                    
                    document.removeEventListener('click', startTestHandler);
                }
            });
        });
        
        function getColorHex(colorName) {
            const colorMap = {
                '紅色': '#f44336',
                '藍色': '#2196F3',
                '綠色': '#4CAF50',
                '黃色': '#FFEB3B',
                '紫色': '#9C27B0'
            };
            return colorMap[colorName] || '#777';
        }
        
