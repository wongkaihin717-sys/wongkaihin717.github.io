        // 經典歌詞遊戲數據
        const lyricsQuestions = [
            {
                question: '"月亮代表我的______"',
                options: ["心", "情", "意", "愛"],
                correct: "心"
            },
            {
                question: '"甜蜜蜜，你笑得______"',
                options: ["甜蜜蜜", "真美麗", "好開心", "像花兒"],
                correct: "甜蜜蜜"
            },
            {
                question: '"小城故事多，充滿______"',
                options: ["歡樂", "喜和樂", "人情味", "回憶"],
                correct: "喜和樂"
            },
            {
                question: '"往事只能______"',
                options: ["回味", "回憶", "忘記", "想起"],
                correct: "回味"
            },
            {
                question: '"夜來香，我為你______"',
                options: ["歌唱", "祝福", "思念", "陶醉"],
                correct: "歌唱"
            }
        ];
        
        let currentLyricIndex = 0;
        
        function loadLyricsQuestion() {
            const question = lyricsQuestions[currentLyricIndex];
            const lyricsQuestion = document.getElementById('lyrics-question');
            const lyricsOptions = document.querySelector('.lyrics-options');
            const lyricsResult = document.getElementById('lyrics-result');
            
            lyricsQuestion.textContent = question.question;
            
            lyricsOptions.innerHTML = '';
            question.options.forEach(option => {
                const button = document.createElement('button');
                button.className = 'lyric-option';
                button.textContent = option;
                button.setAttribute('data-answer', option);
                lyricsOptions.appendChild(button);
            });
            
            lyricsResult.innerHTML = '';
            lyricsResult.style.color = '';
            
            document.querySelectorAll('.lyric-option').forEach(option => {
                option.addEventListener('click', checkLyricAnswer);
            });
        }
        
        function checkLyricAnswer(e) {
            const selected = e.target.getAttribute('data-answer');
            const correct = lyricsQuestions[currentLyricIndex].correct;
            const resultElement = document.getElementById('lyrics-result');
            
            document.querySelectorAll('.lyric-option').forEach(option => {
                option.removeEventListener('click', checkLyricAnswer);
                option.style.cursor = 'not-allowed';
            });
            
            if (selected === correct) {
                resultElement.innerHTML = `
                    <div style="color: #4CAF50; font-weight: bold;">
                        <i class="fas fa-check-circle"></i> 答對了！這句歌詞是：「${lyricsQuestions[currentLyricIndex].question.replace('______', correct)}」
                    </div>
                    <p style="margin-top: 10px; color: #666;">您真厲害！還記得這首經典老歌！</p>
                `;
                
                e.target.style.background = '#4CAF50';
                e.target.style.color = 'white';
            } else {
                resultElement.innerHTML = `
                    <div style="color: #f44336; font-weight: bold;">
                        <i class="fas fa-times-circle"></i> 答錯了，正確答案是：「${correct}」
                    </div>
                    <p style="margin-top: 10px; color: #666;">正確歌詞是：「${lyricsQuestions[currentLyricIndex].question.replace('______', correct)}」</p>
                `;
                
                e.target.style.background = '#f44336';
                e.target.style.color = 'white';
                
                document.querySelectorAll('.lyric-option').forEach(option => {
                    if (option.getAttribute('data-answer') === correct) {
                        option.style.background = '#4CAF50';
                        option.style.color = 'white';
                    }
                });
            }
        }
        
        document.getElementById('next-lyrics').addEventListener('click', function() {
            currentLyricIndex = (currentLyricIndex + 1) % lyricsQuestions.length;
            loadLyricsQuestion();
        });
        
        // 健康小貼士隨機顯示
        const healthTips = [
